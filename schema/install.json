{
  "properties": {
    "mongo_url": {
      "type": "string",
      "description": "Mongo URL",
      "default": "mongodb://localhost:27017/",
      "required": true
    },
    "mongo_table": {
      "type": "string",
      "description": "Mongo Table",
      "default": "record"
    },
    "mongo_prefix": {
      "type": "string",
      "description": "Mongo prefix(db)",
      "default": "example"
    },
    "mongo_options": {
      "type": "string",
      "description": "Mongo Options (example: ?replicaSet=rs1&slaveOk=true)",
      "default": ""
    },
    "hostname": {
      "type": "string",
      "description": "IP or hostname of the server",
      "default": ""
    },
    "port": {
      "type": "number",
      "description": "Port",
      "default": 15001,
      "required": true
    },
    "workers": {
      "type": "number",
      "description": "Number of workers",
      "default": 2,
      "required": true
    },
    "self_path": {
      "type": "string",
      "description": "SELF PATH",
      "default": "auth",
      "required": true
    },
    "self_url": {
      "type": "string",
      "description": "SELF URL",
      "default": "http://localhost:15001/",
      "required": true
    },
    "schema": {
      "type": "string",
      "description": "Do not change",
      "default": "record.json",
      "required": true
    }
  }
}
